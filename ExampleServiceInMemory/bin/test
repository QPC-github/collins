#!/bin/sh

uri='http://0.0.0.0'

if [ $# = 1 ]; then
    uri=$1
fi

if [[ `./bin/put $uri foo bar` = 'ok' && `./bin/get $uri foo` = 'bar' ]]; then
    echo "Put OK"
    echo "Get OK"
else
    echo "Put Failed!"
    echo "Get Failed!"
fi

if [[ `./bin/get $uri foo` = 'bar' && `./bin/clear $uri` = 'ok' && `./bin/get $uri foo` = 'No such key' ]]; then
    echo "Clear OK"
else
    echo "Clear Failed!"
fi